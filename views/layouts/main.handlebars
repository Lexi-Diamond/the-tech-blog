<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>The Tech Blog</title>
    <link rel="stylesheet" href="/css/jass.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Handlee&family=Lobster&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    
  </head>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">The Tech Blog</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" aria-current="page" href="/">Homepage</a>
        {{#if logged_in}}
            <a class="nav-link" href="#">Dashboard</a>
            {{/if}}
        {{#if logged_in}}
            <a class="nav-link" id="logout">Logout </a>
          {{else}}
            <a class="nav-link" href="/login" id="login">Login</a>
          {{/if}}
      </div>
    </div>
  </div>
</nav>
<main>
  {{#if posts}}
  {{#each posts as |post|}}
    <a data-id="{{id}}" class="btn delete gettingridof"><span></span><text
      >Delete</text></a>
    <div class="paper">
      <a href="/recipe/{{id}}" class="container-fluid">
      <div class="paper-content">
        <div id="recipeCard" class="mb-3" style="max-width: 1000px;">
          <div class="row g-0">
            <div class="col-md-8">
              <div class="">
                <h5 class="recipeTitle">{{title}}</h5>
                <p class="">{{post_body}}</p>
                <p class="">Author:{{user_id}}</p>
                <p class="">Created on: {{date_created}}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </a>
      {{{ body }}}
    </main>
    <footer>
      Made by: Pine>=Apple
    </footer>
  </div>

  {{#if loggedIn}}
  <script src="/public/js/logout.js"></script>
  {{/if}}